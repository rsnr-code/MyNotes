<img src="/img/welcomegif.gif" alt="welcome gif" class="welcome mt-2">

<h3 class="mt-4 lead">Hi <%=name%>! Here are all your notes.</h2>

<% if (locals.messages.errors) { %>
   <% messages.errors.forEach( el => { %>
     <div class="alert alert-warning alert-dismissible fade show" role="alert">
       <%= el.msg %>
       <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
     </div>
   <% }) %>    
<% } %>
   

<% if(note.length > 0){  %>  
   
  <table class="striped">
   <thead>
      <tr>
         <th>Title</th>
         <th>Date</th>
         <th>Status</th>
         <th></th>
      </tr>
   </thead>
   <% note.forEach ( el => { %>
   <tbody class="notes" data-id="<%=el._id%>">
      <tr>
         <td><a href="notes/<%=el._id%>"><%= el.title %></a></td>
         <td><%= formatDate(el.createdAt, 'Do MMMM, YYYY') %></td>
         <td><%= el.status %></td>
         <td class="buttons">
            <a href="/notes/edit/<%=el._id%>" class="btn btn-float">
               <i class="fas fa-edit"></i>
           </a>

           <form action="/notes/<%=el._id%>" method="POST" id="delete-form">
               <input type="hidden" name="_method" value="DELETE">
               <button type="submit" class="btn red">
                   <i class="fas fa-trash"></i>
               </button>
           </form>
         </td>
      </tr> 

      <% }); %>
   </tbody>
   
  </table>
  
  
   <%=  %> 
<% } else {%>
   <p class="text-center mt-5"> Your NotePad is empty! Click the button at the bottom right to start!</p>
   <% } %>


<a href="/logout" class="btn btn-secondary logoutButton">Logout</a>

<div class="fixed-action-btn">
   <a href="notes/add" class="btn-floating btn-large waves-effect waves-light red"><i class="fas fa-plus"></i></a>
</div>


